package views

import (
	"fmt"
	"github.com/conneroisu/conneroh.com/internal/data/gen"
)

templ icon(
	id string,
	attrs templ.Attributes,
) {
	<img
		src={ fmt.Sprintf("https://conneroh.fly.storage.tigris.dev/svg/%s.svg", id) }
		{ attrs... }
	/>
}

templ image(
	id string,
	alt string,
	class string,
) {
	<img
		src={ fmt.Sprintf("https://conneroh.fly.storage.tigris.dev/img/%s.png", id) }
		alt={ alt }
		class={ class }
	/>
}

// See conneroh.views.List & conneroh.views.search
templ TagControl(
	tag *gen.Tag,
	updateTarget string,
) {
	<div
		x-data="{ open: false }"
		x-on:mouseover="open = true"
		x-on:mouseleave="open = false"
		class="ctag flex items-center h-8 flex-row justify-between w-full hover:underline"
	>
		<div class="flex items-center">
			@icon(tag.Icon, templ.Attributes{"x-show": "open", "x-transition": ""})
		</div>
		<div class="flex items-center">
			<a
				x-on:click="open = true"
				x-show="!open"
			>
				{ tag.Title }
			</a>
			<a
				x-show="open"
				hx-swap="outerHTML"
				hx-get={ fmt.Sprintf("/hateoas/morphs/tag/%s", tag.Slug) }
				hx-target="#bodiody"
				hx-trigger="click"
				hx-push-url={ fmt.Sprintf("/tag/%s", tag.Slug) }
				preload="mouseover"
			>
				{ tag.Title }
			</a>
		</div>
		<div class="flex items-center">
			@icon("circle-plus", templ.Attributes{"x-show": "open", "x-transition": ""})
			@icon("circle-minus", templ.Attributes{"x-show": "open", "x-transition": ""})
		</div>
	</div>
}
