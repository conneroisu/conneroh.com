package components

import (
	"github.com/conneroisu/conneroh.com/internal/assets"
	"strconv"
)

const (
	maxShownTags = 6
)

templ ProjectItem(
	project *assets.Project,
	attrs templ.Attributes,
) {
	<div
		x-data="{ allTags: false }"
		class={ "h-full w-full" }
	>
		<div
			{ attrs... }
		>
			<div class={ "relative w-full" }>
				@Image(
					project.BannerPath,
					project.Title,
					"w-full h-48 object-cover",
				)
			</div>
			<div
				class={ "flex-grow flex p-6 flex-col" }
			>
				<h2
					class={ "mb-3 text-xl hover:underline font-semibold text-white line-clamp-2" }
				>
					{ project.Title }
				</h2>
				<p
					class={ "text-gray-300 mb-4 line-clamp-2" }
				>
					{ project.Description }
				</p>
				<div
					class={ "mb-4 grid-cols-2 grid flex-wrap gap-2" }
				>
					for i, tag := range project.Tags[0:min(len(project.Tags), maxShownTags-1)] {
						if i < maxShownTags-1 || len(project.Tags) == maxShownTags {
							@TagControl(tag)
						} else if i == maxShownTags {
						}
					}
					if len(project.Tags) > maxShownTags {
						@moreTagsButton(strconv.Itoa(len(project.Tags[maxShownTags-1:])))
					}
				</div>
			</div>
			<span
				class={ "text-py-1 bottom-0 px-2 rounded-tr-md text-white left-0 absolute border-emerald-800 border-2 border-l-0 border-b-0" }
			>
				{ strconv.Itoa(len(project.Posts)) } posts
			</span>
			<span
				class={ "px-2 bottom-0 py-1 right-0 text-xs rounded-tl-md text-white absolute border-emerald-800 border-2 border-r-0 border-b-0" }
			>
				{ strconv.Itoa(len(project.Tags)) } tags
			</span>
		</div>
		if len(project.Tags) > maxShownTags {
			<div
				class={ "absolute z-10 grid sm:grid-cols-2 md:grid-cols-3 gap-1" }
				x-show="allTags"
				x-anchor.bottom.offset="$refs.moreTags"
			>
				for _, tag := range project.Tags[maxShownTags-1:] {
					@TagControl(tag)
				}
			</div>
		}
	</div>
}

