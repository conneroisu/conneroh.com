templ TagItem(tag *assets.Tag, attrs templ.Attributes) {
	<a
		aria-label={ tag.Title }
		{ attrs... }
	>
		<div
			class={ "items-center justify-between mb-3 flex p-6" }
		>
			<h2
				class={ "font-semibold text-white text-xl" }
			>
				{ tag.Title }
			</h2>
			<div
				class={ "rounded-sm h-8 justify-center items-center flex w-8" }
			>
				@Icon(tag.Icon, templ.Attributes{
					"class": "stoke-white",
					"style": "width: 4em; height: 4em;",
				})
			</div>
		</div>
		<div
			class={ "text-gray-300 mb-4 line-clamp-2" }
		>
			{ tag.Description }
		</div>
		<span
			class={ "text-py-1 bottom-0 px-2 rounded-tr-md text-white left-0 absolute border-emerald-800 border-2 border-l-0 border-b-0" }
		>
			{ strconv.Itoa(len(tag.Posts)) } posts
		</span>
		<span
			class={ "px-2 bottom-0 py-1 right-0 text-xs rounded-tl-md text-white absolute border-emerald-800 border-2 border-r-0 border-b-0" }
		>
			{ strconv.Itoa(len(tag.Projects)) } projects
		</span>
	</a>
}

