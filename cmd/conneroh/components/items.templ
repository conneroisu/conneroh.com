templ moreTagsButton(tagCount string) {
	<button
		class={ "text-sm px-3 items-center hover:underline bg-emerald-800 w-full transition-colors py-1 hover:bg-emerald-600 h-8 rounded-sm justify-between font-medium text-emerald-300 hover:text-white flex flex-row" }
		x-on:click.stop="allTags = !allTags"
		x-ref="moreTags"
	>
		<div
			x-show="!allTags"
			class="flex flex-row items-center"
		>
			({ tagCount }) More
		</div>
		<div
			x-show="allTags"
			class="flex flex-row items-center"
		>
			Show less
		</div>
	</button>
}
